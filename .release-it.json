{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "pnpm run lint"],
    "after:bump": "npx changelogen@latest --output CHANGELOG.md && npm run build"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
